{
  "name": "api-signature",
  "description": "datr.tech JWT API",
  "version": "0.1.0",
  "main": "./dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "analysis": "npx fta ./",
    "analysis:json": "npm run analysis -- --format json",
    "clean": "npx rimraf coverage/* dist/*",
    "lint": "npx eslint --config ./eslint.config.mjs --fix",
    "format:base": "npx prettier --config ./.prettierrc './src/**/*.ts' './test/**/*.ts'",
    "format:check": "npm run format:base -- --check",
    "format:write": "npm run format:base -- --write",
    "format": "npm run format:write",
    "build": "npx webpack --mode production",
    "start": "node ./dist/signature-api.cjs",
    "dev": "npx tsx ./src/index.ts",
    "test:server": "npx tsx ./test/server/index.ts",
    "test:base": "npx jest",
    "test:unit": "npm run test:base -- ./test/unit",
    "test:unit:cov": "npm run test:unit -- --coverage",
    "test:unit:changed": "npm run test:unit -- -o",
    "test": "npm run test:unit:cov",
    "prepare": "husky",
    "pre-push": "npm run lint && npm run analysis && npm run build",
    "pre-push:complete": "npm run lint && npm run analysis && npm run build"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.24.7",
    "@commitlint/config-conventional": "^19.5.0",
    "@commitlint/format": "^19.5.0",
    "@eslint/compat": "^1.1.1",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.10.0",
    "@jest/globals": "^29.7.0",
    "@mocks-server/main": "^1.3.0",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.13",
    "commitlint": "^19.5.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "fta-cli": "^2.0.0",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "nock": "^13.5.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.6.0",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.5.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "express-validator": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "winston": "^3.14.2"
  }
}
